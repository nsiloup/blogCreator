{
    "compilerOptions": {
      "skipLibCheck": true,
      "module": "ESNext",
      "moduleResolution": "bundler",
      "target": "ESNext",
      "isolatedModules": true,
      "esModuleInterop": true,
      "noEmit": true,
      "allowImportingTsExtensions": true,
      "outDir": "dist",
      "lib": [ "esnext", "DOM" ],
      "types": [ "node" ],
      "baseUrl": "./"
    },
    "exclude": [ "node_modules" ],
    "include": [
      "src/**/*.ts",
      "bin/*.ts"
    ]
  }
  